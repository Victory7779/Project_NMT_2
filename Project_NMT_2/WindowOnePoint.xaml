<Window x:Class="Project_NMT_2.WindowOnePoint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_NMT_2"
        mc:Ignorable="d"
        Title="Питання" Height="450" Width="800"
        WindowStyle="SingleBorderWindow"
        Background="Bisque"
        Icon="V:\Рабочии столы\IT STEP\Курсовая№1\Photo/icon.png"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="question_TextBox"
                 Grid.Row="0"
                 Height="90"
                 Width="600"
                 Text="Hello"
                 FontSize="20"
                 Background="WhiteSmoke"
                 BorderBrush="DarkSlateBlue"
                 BorderThickness="2"
                 Padding="5 5 0 0"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 TextWrapping="Wrap"/>
        <StackPanel Grid.Row="1">
            <!--Обозначения  вопросов и ответов-->
            <StackPanel x:Name="radioBtnAndTextBox_SrackPanel"
                        Orientation="Vertical"
                        Width="650"
                        HorizontalAlignment="Left"
                        Margin="90 0 0 0">
                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Margin="0 0 0 10">
                    <RadioButton Margin="0 0 10 0"/>
                    <TextBox TextWrapping="Wrap"
                             Width="600"
                             Height="20"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Margin="0 0 0 10">
                    <RadioButton Margin="0 0 10 0"/>
                    <TextBox TextWrapping="Wrap"
                             Width="600"
                             Height="20"/>
                </StackPanel>
                <Button x:Name="addOneOption_Btn"
                        Height="20"
                        Width="20"
                        Margin="0 10 0 0"
                        BorderThickness="0"
                        HorizontalAlignment="Left"
                        Click="addOneOption_Btn_Click">
                    <Image Source="V:\Рабочии столы\IT STEP\Курсовая№1\Photo/Plus.png"/>
                </Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
